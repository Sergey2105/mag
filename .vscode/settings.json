{
    "typescript.preferences.importModuleSpecifier": "shortest",
    "javascript.preferences.importModuleSpecifier": "shortest",
    // "path-intellisense.mappings": {
    //     "@": "${workspaceRoot}/src"
    // },

    // üí° –ë–ª–æ–∫ –ø—Ä–æ –±–∞–∑–æ–≤—É—é —ç—Ä–≥–æ–Ω–æ–º–∏–∫—É: –ø–ª–∞–≤–Ω–∞—è –ø—Ä–æ–∫—Ä—É—Ç–∫–∞, –∞–≤—Ç–æ-–æ—Ç—Å—Ç—É–ø—ã, –æ—Ç–∫–ª—é—á—ë–Ω–Ω–∞—è –º–∏–Ω–∏–∫–∞—Ä—Ç–∞, –±—ã—Å—Ç—Ä—ã–π –≤—ã–±–æ—Ä –ø–æ–¥—Å–∫–∞–∑–æ–∫, –º—É–ª—å—Ç–∏–∫—É—Ä—Å–æ—Ä —á–µ—Ä–µ–∑ Cmd/Ctrl,
    // –û—Å–Ω–æ–≤–Ω—ã–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ —Ä–µ–¥–∞–∫—Ç–æ—Ä–∞
    "window.openFilesInNewWindow": "off",
    "editor.tabSize": 2,
    "editor.insertSpaces": false,
    "editor.smoothScrolling": true,
    // "editor.minimap.enabled": false,
    "editor.detectIndentation": true,
    "editor.suggestSelection": "first",
    "editor.multiCursorModifier": "ctrlCmd",

    // üí° –ë–ª–æ–∫ –ø—Ä–æ —á–∏—Ç–∞–±–µ–ª—å–Ω–æ—Å—Ç—å: —É–ø—Ä–∞–≤–ª—è–µ–º –ø–µ—Ä–µ–Ω–æ—Å–æ–º –≤ 100 –∫–æ–ª–æ–Ω–æ–∫, –¥–æ–∫—Ä—É—á–∏–≤–∞–µ–º —ç–∫—Ä–∞–Ω –Ω–∏–∂–µ —Ñ–∞–π–ª–∞, –ø—Ä–∞–≤–∏–º –ø–∞—Ä–Ω—ã–µ —Ç–µ–≥–∏ –≤–º–µ—Å—Ç–µ, –∞–≤—Ç–æ–∑–∞–∫—Ä—ã–≤–∞–µ–º —Ç–µ–≥–∏, —É–±–∏—Ä–∞–µ–º ¬´—à—É–º¬ª —Å–ª—É–∂–µ–±–Ω—ã—Ö —Å–∏–º–≤–æ–ª–æ–≤
    // –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –ø–µ—Ä–µ–Ω–æ—Å–∞ —Å–ª–æ–≤
    // "editor.wordWrap": "bounded",
    // "editor.wrappingIndent": "same",
    // "editor.wordWrapColumn": 100,

    // –ü—Ä–æ–∫—Ä—É—Ç–∫–∞ –∑–∞ –ø—Ä–µ–¥–µ–ª—ã –ø–æ—Å–ª–µ–¥–Ω–µ–π —Å—Ç—Ä–æ–∫–∏
    "editor.scrollBeyondLastLine": true,

    // –°–≤—è–∑–∞–Ω–Ω—ã–µ —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è —Ç–µ–≥–æ–≤
    "editor.linkedEditing": true,

    // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–µ –∑–∞–∫—Ä—ã—Ç–∏–µ —Ç–µ–≥–æ–≤
    "html.autoClosingTags": true,
    "javascript.autoClosingTags": true,
    "typescript.autoClosingTags": true,

    // –û—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ —Å–∏–º–≤–æ–ª–æ–≤
    "editor.renderControlCharacters": false,

    // –ü–æ–¥—Å–≤–µ—Ç–∫–∞ –Ω–µ–æ–¥–Ω–æ–∑–Ω–∞—á–Ω—ã—Ö —Å–∏–º–≤–æ–ª–æ–≤
    "editor.unicodeHighlight.ambiguousCharacters": false,

    // üí° –ö–∞—Å—Ç–æ–º–∏–∑–∞—Ü–∏—è –ø–æ–¥—Å–≤–µ—Ç–∫–∏ —Å–∏–Ω—Ç–∞–∫—Å–∏—Å–∞, —Å—Ç–∏–ª–∏–∑–∞—Ü–∏—è –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–µ–≤ –∏ –∫–ª—é—á–µ–≤—ã—Ö —Å–ª–æ–≤
    // –ö–∞—Å—Ç–æ–º–∏–∑–∞—Ü–∏—è –ø–æ–¥—Å–≤–µ—Ç–∫–∏ —Å–∏–Ω—Ç–∞–∫—Å–∏—Å–∞
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": ["comment", "entity.name.type.class", "keyword", "constant", "storage.modifier", "storage.type.class.js"],
                "settings": {
                    "fontStyle": "italic"
                }
            },
            {
                "scope": ["invalid", "keyword.operator", "constant.numeric.css", "keyword.other.unit.px.css", "constant.numeric.decimal.js", "constant.numeric.json"],
                "settings": {
                    "fontStyle": ""
                }
            }
        ]
    },

    // üí° –ù–∞—Å—Ç—Ä–æ–π–∫–∏ —Ç–µ—Ä–º–∏–Ω–∞–ª–∞ ‚Äî —à—Ä–∏—Ñ—Ç, –∫—É—Ä—Å–æ—Ä
    // –ù–∞—Å—Ç—Ä–æ–π–∫–∏ —Ç–µ—Ä–º–∏–Ω–∞–ª–∞
    "terminal.integrated.fontFamily": "PragmataPro Liga",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.cursorStyle": "line",

    // üí° –£–ø—Ä–æ—â–∞–µ–º —Ä–∞–±–æ—Ç—É —Å —Ñ–∞–π–ª–∞–º–∏, –æ—Ç–∫–ª—é—á–∞–µ–º –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è
    // –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –æ–±–æ–∑—Ä–µ–≤–∞—Ç–µ–ª—è
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.compactFolders": false,
    "workbench.startupEditor": "newUntitledFile",

    // üí° –ú–∏–Ω–∏–º–∏–∑–∏—Ä—É–µ–º –æ—Ç–≤–ª–µ–∫–∞—é—â–∏–µ —ç–ª–µ–º–µ–Ω—Ç—ã –ø—Ä–∏ –¥–µ–±–∞–≥–µ
    // –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –æ—Ç–ª–∞–¥–∫–∏
    "debug.toolBarLocation": "hidden",
    "debug.focusWindowOnBreak": false,
    "debug.showInlineBreakpointCandidates": false,
    "debug.showBreakpointsInOverviewRuler": false,

    // üí° Emmet ‚Äî –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –¥–ª—è Blade –∏ React
    // –ù–∞—Å—Ç—Ä–æ–π–∫–∏ Emmet
    "emmet.includeLanguages": {
        "blade": "html",
        "javascript": "javascriptreact",
        "svelte": "html"
    },
    "emmet.triggerExpansionOnTab": true,

    // üí° Prettier –∏ —Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –∫–æ–¥–∞
    // –ù–∞—Å—Ç—Ä–æ–π–∫–∏ —Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏—è
    "prettier.semi": false, // –ù–µ —Å—Ç–∞–≤–∏—Ç—å —Ç–æ—á–∫–∏ —Å –∑–∞–ø—è—Ç–æ–π
    "prettier.useTabs": true, // –ò—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å —Ç–∞–±—ã –≤–º–µ—Å—Ç–æ –ø—Ä–æ–±–µ–ª–æ–≤
    "editor.formatOnSave": true, // –§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞—Ç—å —Ñ–∞–π–ª –ø—Ä–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–∏
    "prettier.singleQuote": true, // –û–¥–∏–Ω–∞—Ä–Ω—ã–µ –∫–∞–≤—ã—á–∫–∏ –≤ JS/TS
    // "prettier.jsxSingleQuote": true, // –û–¥–∏–Ω–∞—Ä–Ω—ã–µ –∫–∞–≤—ã—á–∫–∏ –≤ JSX
    "prettier.arrowParens": "avoid", // –ù–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å —Å–∫–æ–±–∫–∏ –≤ —Å—Ç—Ä–µ–ª–æ—á–Ω—ã—Ö —Ñ—É–Ω–∫—Ü–∏—è—Ö —Å –æ–¥–Ω–∏–º –∞—Ä–≥—É–º–µ–Ω—Ç–æ–º
    "prettier.htmlWhitespaceSensitivity": "ignore", // –ò–≥–Ω–æ—Ä–∏—Ä–æ–≤–∞—Ç—å –ø—Ä–æ–±–µ–ª—ã –≤ HTML –ø—Ä–∏ —Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–∏
    "prettier.singleAttributePerLine": true, // –û–¥–∏–Ω –∞—Ç—Ä–∏–±—É—Ç –Ω–∞ —Å—Ç—Ä–æ–∫—É –≤ HTML/JSX
    "prettier.bracketSameLine": false, // –ó–∞–∫—Ä—ã–≤–∞—é—â–∏–π > –Ω–∞ –Ω–æ–≤–æ–π —Å—Ç—Ä–æ–∫–µ
    "prettier.printWidth": 80, // –ú–∞–∫—Å–∏–º–∞–ª—å–Ω–∞—è –¥–ª–∏–Ω–∞ —Å—Ç—Ä–æ–∫–∏ ‚Äî 80 —Å–∏–º–≤–æ–ª–æ–≤
    "prettier.proseWrap": "always", // –í—Å–µ–≥–¥–∞ –ø–µ—Ä–µ–Ω–æ—Å–∏—Ç—å –¥–ª–∏–Ω–Ω—ã–π —Ç–µ–∫—Å—Ç (–Ω–∞–ø—Ä–∏–º–µ—Ä, –≤ markdown)
    "prettier.trailingComma": "none", // –ù–µ –¥–æ–±–∞–≤–ª—è—Ç—å –∑–∞–ø—è—Ç—ã–µ –≤ –∫–æ–Ω—Ü–µ —Å–ø–∏—Å–∫–æ–≤/–æ–±—ä–µ–∫—Ç–æ–≤
    "prettier.tabWidth": 2, // –®–∏—Ä–∏–Ω–∞ —Ç–∞–±–∞ ‚Äî 2 –ø—Ä–æ–±–µ–ª–∞ (–≤–∏–∑—É–∞–ª—å–Ω–æ)
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.inlineSuggest.enabled": true,

    // üí° Breadcrumbs –æ—Ç–∫–ª—é—á–µ–Ω—ã –ø–æ–ª–Ω–æ—Å—Ç—å—é
    // –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –¥–ª—è Breadcrumbs
    "breadcrumbs.icons": false,
    "breadcrumbs.showKeys": false,
    "breadcrumbs.showFiles": false,
    "breadcrumbs.symbolPath": "off",
    "breadcrumbs.showArrays": false,
    "breadcrumbs.showEvents": false,
    "breadcrumbs.showFields": false,
    "breadcrumbs.showClasses": false,
    "breadcrumbs.showMethods": false,
    "breadcrumbs.showBooleans": false,
    "breadcrumbs.showFunctions": false,
    "breadcrumbs.showConstants": false,
    "breadcrumbs.showEnumMembers": false,
    "breadcrumbs.showConstructors": false,

    // üí° –ù–∞—Å—Ç—Ä–æ–π–∫–∏ JS / TS
    // –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –¥–ª—è JS –∏ TS
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.preferences.quoteStyle": "single",
    "javascript.preferences.quoteStyle": "single",
    "javascript.format.semicolons": "remove",
    "typescript.format.semicolons": "remove",
    "js/ts.implicitProjectConfig.experimentalDecorators": true,

    // üí° –ü—Ä–æ–≤–µ—Ä–∫–∞ –æ—Ä—Ñ–æ–≥—Ä–∞—Ñ–∏–∏ (en + ru)
    // –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –ø—Ä–æ–≤–µ—Ä–∫–∏ –æ—Ä—Ñ–æ–≥—Ä–∞—Ñ–∏–∏
    "cSpell.language": "en,ru",
    "cSpell.enabled": true,

    // üí° –†–∞–∑—Ä–µ—à—ë–Ω–Ω—ã–µ —Å–∏–º–≤–æ–ª—ã Unicode
    // –†–∞–∑—Ä–µ—à–µ–Ω–Ω—ã–µ —Å–∏–º–≤–æ–ª—ã –¥–ª—è Unicode Highlight
    "editor.unicodeHighlight.allowedCharacters": {
        "–∞": true,
        "—Å": true,
        "–¢": true,
        "–±": true,
        "–µ": true,
        " ": true
    },
    "editor.hideCursorInOverviewRuler": true,
    "git.enableSmartCommit": true,

    // üí° –ò—Å–∫–ª—é—á–∞–µ–º—ã–µ —Ñ–∞–π–ª—ã
    // –ò—Å–∫–ª—é—á–∞–µ–º—ã–µ —Ñ–∞–π–ª—ã
    "files.exclude": {
        "**/.expo": true,
        "**/.expo-shared": true,
        "**/.idea": true,
        "**/.nuxt": true,
        "**/.next": true,
        "**/coverage": true
    },

    // üí° –ü—Ä–æ—á–∏–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏
    "files.defaultLanguage": "plaintext",
    "diffEditor.ignoreTrimWhitespace": false,
    "security.workspace.trust.untrustedFiles": "open",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "window.confirmBeforeClose": "keyboardOnly",
    "git.openRepositoryInParentFolders": "never",
    "editor.gotoLocation.multipleDefinitions": "goto",

    "editor.stickyScroll.scrollWithEditor": false,
    "workbench.tree.enableStickyScroll": false,
    "editor.stickyScroll.enabled": true,
    "github.copilot.editor.enableCodeActions": true,

    // üí° –ö–∞—Å—Ç–æ–º–Ω—ã–µ –ª–µ–π–±–ª—ã –≤–∫–ª–∞–¥–æ–∫ –¥–ª—è Next.js App Router (—É–¥–æ–±–Ω–æ –¥–ª—è –Ω–∞–≤–∏–≥–∞—Ü–∏–∏)
    "workbench.editor.customLabels.patterns": {
        "**/app/**/[[]*[]]/[[]*[]]/page.tsx": "${dirname(2)}/${dirname(1)}/${dirname}/page.tsx",
        "**/app/**/[[]*[]]/page.tsx": "${dirname(1)}/${dirname}/page.tsx",
        "**/app/**/page.tsx": "${dirname}/page.tsx",
        "**/app/**/[[]*[]]/[[]*[]]/layout.tsx": "${dirname(2)}/${dirname(1)}/${dirname}/layout.tsx",
        "**/app/**/[[]*[]]/layout.tsx": "${dirname(1)}/${dirname}/layout.tsx",
        "**/app/**/layout.tsx": "${dirname}/layout.tsx"
    },

    // üí° Markdown ‚Äî –∞–≤—Ç–æ–æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å—Å—ã–ª–æ–∫ –ø—Ä–∏ –ø–µ—Ä–µ–Ω–æ—Å–µ —Ñ–∞–π–ª–æ–≤
    "markdown.updateLinksOnFileMove.enabled": "always",
    "cSpell.autoFormatConfigFile": true,

    // üí° –ê—Å—Å–æ—Ü–∏–∞—Ü–∏–∏ –¥–ª—è TailwindCSS
    "files.associations": {
        "*.css": "tailwindcss"
    },

    // üí° –ü–æ–¥—Å–∫–∞–∑–∫–∏ –∏ –∑–∞–¥–µ—Ä–∂–∫–∞ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è
    "editor.quickSuggestions": {
        "strings": "on"
    },
    "editor.quickSuggestionsDelay": 100,

    // üí° –¢–µ–ª–µ–º–µ—Ç—Ä–∏—è –æ—Ç–∫–ª—é—á–µ–Ω–∞
    "telemetry.telemetryLevel": "off",

    // üí° Prisma —Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ
    "[prisma]": {
        "editor.defaultFormatter": "Prisma.prisma"
    },

    // üí° –û—Ç–∫–ª—é—á–∞–µ–º —Ñ–æ–ª–¥–∏–Ω–≥ –∏ —Å–µ–ª–µ–∫—Ç–æ—Ä –≤—Å—Ç–∞–≤–∫–∏
    "editor.folding": false,
    "editor.pasteAs.enabled": false,
    "editor.pasteAs.showPasteSelector": "never",

    // üí° –ü–æ–¥–¥–µ—Ä–∂–∫–∞ Tailwind class attributes
    "tailwindCSS.classAttributes": ["class", "className", "headerClassName"],

    // üí° Advanced New File ‚Äî —Ñ–∏–ª—å—Ç—Ä—ã –∏ –ø–æ–≤–µ–¥–µ–Ω–∏–µ
    "advancedNewFile.exclude": {
        "node_modules": true,
        "node_modules_electron": true,
        "dev": true,
        "dist": true,
        "ios": true,
        "android": true,
        "build": true,
        ".dart_tool": true,
        "macos": true,
        "linux": true,
        "windows": true
    },
    "advancedNewFile.showInformationMessages": true,
    "advancedNewFile.convenienceOptions": ["last", "current", "root"],

    // üí° –ê—Å—Å–æ—Ü–∏–∞—Ü–∏–∏ –¥–ª—è SVG
    "workbench.editorAssociations": {
        "*.svg": "default"
    },

    // üí° Chat / Copilot / AI –∏–Ω—Ç–µ–≥—Ä–∞—Ü–∏–∏
    "chat.agent.enabled": true,
    "github.copilot.chat.agent.thinkingTool": true

    // "workbench.editor.customLabels.patterns": {
    //     "**/app/**/{page,layout,index}.{ts,tsx}": "(${dirname})/${filename}.${extname}",
    //     "**/index.{ts,tsx}": "${dirname}/index.${extname}"
    // }
}
